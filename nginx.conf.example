# Nginx configuration for Ken McCoy website
# Copy this to /etc/nginx/sites-available/kenmccoy
# Then create symlink: sudo ln -s /etc/nginx/sites-available/kenmccoy /etc/nginx/sites-enabled/

# HTTP Server (redirects to HTTPS if SSL is configured)
server {
    listen 80;
    server_name your-domain.com www.your-domain.com;  # Replace with your domain or IP
    
    # If you have SSL, uncomment this to redirect to HTTPS:
    # return 301 https://$server_name$request_uri;
    
    # If no SSL, serve directly:
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Increase timeouts for API routes
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }
    
    # Increase client body size for file uploads (if needed)
    client_max_body_size 10M;
}

